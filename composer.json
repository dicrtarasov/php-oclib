{
    "type": "yii2-extension",
    "name": "dicr/php-oclib",
    "license": "GPL-3.0-or-later",
    "description": "Библиотека для подключения классов Yii к OpenCart",
    "keywords": ["dicr", "opencart", "yii"],
    "homepage": "https://gitlab.com/dicr/php-oclib",
    "authors": [
        {
            "name": "Igor Tarasov",
            "email": "develop@dicr.org",
            "homepage": "http://dicr.org",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/dicr/php-oclib.git"
    },
    "autoload": {
        "psr-4": {
            "dicr\\oclib\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~7.4 || ~8.0.1",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",

        "yiisoft/yii2": "~2.0",

        "dicr/yii2-helper": "~4.5",
        "dicr/yii2-site": "~7.0",
        "dicr/yii2-validate": "~2.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"},
        {"type": "git", "url": "https://gitlab.com/dicr/yii2-helper.git"},
        {"type": "git", "url": "https://gitlab.com/dicr/yii2-site.git"},
        {"type": "git", "url": "https://gitlab.com/dicr/yii2-validate.git"}
    ]
}
